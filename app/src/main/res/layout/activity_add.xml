<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">



    <TextView
        android:id="@+id/oneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:text="First digit"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/firstDigit"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="85dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/twoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstDigit"
        android:layout_marginStart="68dp"
        android:layout_marginTop="84dp"
        android:text="Second digit"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/secondDigit"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twoLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="85dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_below="@+id/secondDigit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="80dp"
        android:text="@string/add" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="201dp"
        android:layout_height="66dp"
        android:layout_below="@+id/addButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="105dp"
        android:text="@string/reset" />
</RelativeLayout>
